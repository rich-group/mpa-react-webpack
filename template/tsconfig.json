{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "target": "esnext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals":true,
    "jsx": "react-jsx",
    "sourceMap": false,
    "declaration": false,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./tsc/test",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@UI/*": [
        "Shopify-UI/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "typings",
    "src",
    "build",
    "config"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}